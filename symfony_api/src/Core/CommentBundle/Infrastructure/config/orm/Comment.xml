<doctrine-mapping>
    <entity name="App\Core\CommentBundle\Domain\Entity\Comment" table="comments" schema="comments" repository-class="App\Core\CommentBundle\Infrastructure\Repository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO" />
        </id>

        <field name="userId" type="string" length="255" />
        <field name="topcId" type="string" length="255" />
        <field name="comment" type="text" />
    </entity>
</doctrine-mapping>